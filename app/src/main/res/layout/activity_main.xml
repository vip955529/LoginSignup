<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#D5FAFF"
tools:context=".MainActivity">

<!-- Title: Log In -->


<!-- Subtitle -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:layout_marginBottom="49dp"
        android:text="Log In"
        android:textColor="@color/blue"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/emailSignin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/subtitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:text="Welcome Back! Please sign in to continue"
    android:textSize="14sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/title" />


<!-- Email Input -->
    <EditText
        android:id="@+id/emailSignin"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="421dp"
        android:background="@drawable/edittext_bg"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:drawableTint="@color/blue"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:textColorHint="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

<!-- Password Input -->
<EditText
    android:id="@+id/passwordSignin"
    android:layout_width="0dp"
    android:layout_height="50dp"
    android:layout_marginHorizontal="30dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/edittext_bg"
    android:drawableLeft="@drawable/ic_lock"
    android:drawablePadding="10dp"
    android:drawableTint="@color/blue"
    android:hint="Password"
    android:inputType="textPassword"
    android:padding="12dp"
    android:textColorHint="@color/blue"
    app:endIconDrawable="@drawable/ic_eye"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/emailSignin" />

<!-- Sign Up Button -->
<Button
    android:id="@+id/btnSignIn"
    android:layout_width="0dp"
    android:layout_height="50dp"
    android:layout_marginHorizontal="30dp"
    android:layout_marginTop="15dp"
    android:backgroundTint="@color/blue"
    android:text="Sign In"
    android:textColor="@color/white"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/passwordSignin" />

<!-- Already a member? Login -->
<TextView
    android:id="@+id/txtSignin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="Don't have an account? Sign Up"
    android:textSize="14sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/btnSignIn" />

</androidx.constraintlayout.widget.ConstraintLayout>